#!/bin/bash

TODO_FILE="$HOME/.brightside_todo"

# Colors
GREEN="\033[1;32m"
YELLOW="\033[1;33m"
RED="\033[1;31m"
CYAN="\033[1;36m"
BOLD="\033[1m"
RESET="\033[0m"

# Ensure the to-do file exists
touch "$TODO_FILE"

case "$1" in
  add)
    if [[ -z "$2" ]]; then
      echo -e "${RED}‚ö†Ô∏è  Error: Task description cannot be empty.${RESET}"
      exit 1
    fi
    echo "[ ] $2" >> "$TODO_FILE"
    echo -e "${GREEN}‚úÖ Added:${RESET} $2"
    ;;

  list)
    if [ ! -s "$TODO_FILE" ]; then
      echo -e "${YELLOW}üì≠ No tasks found!${RESET}"
    else
      echo -e "${CYAN}üìù Your To-Do List:${RESET}"
      echo "---------------------------------"
      nl -w2 -s') ' "$TODO_FILE" | sed 's/\[x\]/‚úÖ/g' | sed 's/\[ \]/‚¨ú/g'
      echo "---------------------------------"
    fi
    ;;

  done)
    if [[ -z "$2" ]] || ! [[ "$2" =~ ^[0-9]+$ ]]; then
      echo -e "${RED}‚ö†Ô∏è  Usage: brightside todo done <task number>${RESET}"
      exit 1
    fi

    if ! sed -n "${2}p" "$TODO_FILE" | grep -q "\[ \]"; then
      echo -e "${RED}‚ö†Ô∏è  Task $2 is either already done or does not exist.${RESET}"
      exit 1
    fi

    sed -i '' "${2}s/\[ \]/[x]/" "$TODO_FILE"
    echo -e "${GREEN}‚úî Task $2 marked as done!${RESET}"
    ;;

  clear)
    > "$TODO_FILE"
    echo -e "${YELLOW}üßπ Cleared all tasks!${RESET}"
    ;;

  *)
    echo -e "${BOLD}üõ†Ô∏è Usage:${RESET} brightside todo <command> [args]"
    echo "---------------------------------"
    echo -e "${CYAN}Commands:${RESET}"
    echo "  ${BOLD}add <task>${RESET}    ‚Üí Add a new task"
    echo "  ${BOLD}list${RESET}          ‚Üí Show all tasks"
    echo "  ${BOLD}done <num>${RESET}    ‚Üí Mark a task as done"
    echo "  ${BOLD}clear${RESET}         ‚Üí Remove all tasks"
    ;;
esac
