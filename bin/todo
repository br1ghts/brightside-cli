#!/bin/bash

TODO_FILE="$HOME/.brightside_todo"

# Ensure the to-do file exists
touch "$TODO_FILE"

case "$1" in
  add)
    echo "$2" >> "$TODO_FILE"
    echo "âœ… Added: $2"
    ;;

  list)
    if [ ! -s "$TODO_FILE" ]; then
      echo "ğŸ“­ No tasks found!"
    else
      echo "ğŸ“ Your To-Do List:"
      cat -n "$TODO_FILE"
    fi
    ;;

  done)
    if [[ -z "$2" ]]; then
      echo "âš ï¸ Usage: brightside todo done <task number>"
      exit 1
    fi
    sed -i '' "$2d" "$TODO_FILE"
    echo "âœ” Task $2 marked as done!"
    ;;

  clear)
    > "$TODO_FILE"
    echo "ğŸ§¹ Cleared all tasks!"
    ;;

  *)
    echo "ğŸ› ï¸ Usage: brightside todo <command> [args]"
    echo "Commands:"
    echo "  add <task>  â†’ Add a new task"
    echo "  list        â†’ Show all tasks"
    echo "  done <num>  â†’ Mark a task as done"
    echo "  clear       â†’ Remove all tasks"
    ;;
esac