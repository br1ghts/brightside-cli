#!/bin/bash
# Simple YouTube to MP3 downloader script using yt-dlp and FFmpeg

if [ -z "$1" ]; then
    echo "Usage: ytmp3 <YouTube URL>"
    exit 1
fi

echo "Downloading audio from: $1"
yt-dlp -x --audio-format mp3 -o "~/Downloads/%(title)s.%(ext)s" "https://www.youtube.com/watch?v=Gmgz6KsdO3c"

echo "Download complete!"
